{% extends 'base.html.twig' %}

{% block title %}
    {# "Boutique" à remplacer par le nom en dynamique de la vrai boutique #}
     {{ singleStore.name }} - {{ parent() }}
{% endblock %}

{% block stylesheets %}
    <link rel="stylesheet" href="{{ asset('css/store/store-single.css') }}">
{% endblock %}

{% block body %}
    <section class="single">

        {# --- BANNIERE START --- #}
        <div class="single__banniere">
            <img src="{{ asset('images/uploads/stores/' ~ singleStore.picture )}}" alt="banniere de la boutique">
        </div>
        {# --- BANNIERE END --- #}


        {# === TOP LAYOUT START === #}
        <div class="flex top-layout">

            {# --- SIDEBAR START --- #}
            <div class="single__sidebar">
                {% include "components/store/store-sidebar.html.twig" %}
            </div>
            {# --- SIDEBAR END --- #}

            {# --- TABS START --- #}
            <div class="single__tab box-shadow flex">
                <a class="tab subtitle inactive-tab" href="{{ path('store_single-about')}}">A propos</a>
               <a class="tab subtitle active-tab" href="">Boutique </a>
            </div>
            {# --- TABS END --- #}

            {# === CONTENT LAYOUT START === #}
            <div class="content-layout flex">
                <div class="single__store-content">
                    <p class="marginbt-1">Hauts-de-France(59) / Ville</p>

                    <div class="products-list__container marginbt-1">
                        <h2 class="marginbt-1">Catégorie</h2>

                        <div class="products-list flex">
                            {%  for product in singleStore.products %}
                            <div class="product-card box-shadow flex">
                                <div class="img__container flex">
                                    <img src="{{ asset('images/uploads/products/' ~ product.picture)}}" alt="product">
                                </div>
                                <div class="text-content">
                                    <h4 class="marginbt-1">{{ product.name }}</h4>
                                    <span>{{ product.price}} €</span>
                                </div>
                                <button class="btn-second flex">
                                    <a class="flex" href="#">
                                        Ajouter à mon panier
                                    </a>
                                </button>
                            </div>
                            {% endfor %}
                            {% include "components/product/product-card-available.html.twig" %}
                            {% include "components/product/product-card-available.html.twig" %}
                            {% include "components/product/product-card-sold-out.html.twig" %}
                            {% include "components/product/product-card-available.html.twig" %}
                            {% include "components/product/product-card-available.html.twig" %}
                            {% include "components/product/product-card-sold-out.html.twig" %}
                            {% include "components/product/product-card-available.html.twig" %}
                            {% include "components/product/product-card-available.html.twig" %}

                        </div>
                    </div>
                </div>
            </div>
            {# === CONTENT LAYOUT END === #}

        </div>
        {# === TOP LAYOUT END === #}

    </section> 
{% endblock %}