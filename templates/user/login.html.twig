{% extends 'base.html.twig' %}

{% block title %}
    {# Catalogue - {{ parent() }} #}
{% endblock %}

{% block stylesheets %}
    {# <link rel="stylesheet" href="{{ asset('css/game-list.css') }}"> #}
{% endblock %}

{% block body %}
    <h1>Se connecter</h1>

    <form method="post">
        {% if error %}
            <div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
        {% endif %}

        // if user already connected :
        {% if app.user %}
            <div class="mb-3">
                You are logged in as {{ app.user.userIdentifier }}, <a href="{{ path('app_logout') }}">Logout</a>
            </div>
        {% endif %}

        <h1 class="h3 mb-3 font-weight-normal">Please sign in</h1>
        <label for="inputEmail">Email</label>
        // Pour ne pas avoir à reremplir la donnée déjà remplie précédemment :
        <input type="email" value="{{ lastUsername }}" name="email" id="inputEmail" class="" autocomplete="email" required autofocus>
        <label for="inputPassword">Password</label>
        <input type="password" name="password" id="inputPassword" class="" required>

        <input type="hidden" name="_csrf_token"
               value="{{ csrf_token('authenticate') }}"
        >

        // On le met ou pas?? :)
        {#
        Uncomment this section and add a remember_me option below your firewall to activate remember me functionality.
        See https://symfony.com/doc/current/security/remember_me.html

        <div class="checkbox mb-3">
            <label>
                <input type="checkbox" name="_remember_me"> Remember me
            </label>
        </div>
        #}

        <button class="" >
            Sign in
        </button>
    </form>

{% endblock %}



